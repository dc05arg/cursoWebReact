<link rel="stylesheet" href="/stylesheets/admin.css">
<div class="menuUser">
    <div class="usuario">
        <div class="row">
            <div class="col">
                <p class="text-end">Bienvenida/o {{ usuario }} <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i class="fa fa-sign-out-alt"></i></a></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h2 class="menu">Menú</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/menu/agregar" class="btn btn-sm btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
    </div>

    <div class="row"> 
        <div class="col">
            <table class="table table-hover">
                    <thead class="table-secondary">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Pizza</th>
                            <th scope="col">Ingredientes</th>
                            <th scope="col">Precio Chica</th>
                            <th scope="col">Precio Grande</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-end">Editar/Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each menu}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{pizza}}</td>
                            
                            <td>{{ingredientes}}</td>

                            <td>{{chica}}</td>
                                                    
                            <td>{{grande}}</td>

                            <td>{{{imagen}}}</td>
                            
                            <td class="text-end">
                                <a href="/admin/menu/modificar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-pencil-alt"></i></a>
                                <a href="/admin/menu/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                                <i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
            </table>
        </div>
    </div>
</div>
