<div class="boxlog">
    <div class="row" style="margin: 50px 0">
        <div class="col-6 offset-2">
            <h3>Ingrese datos de Pizza:</h3>
            <form action="/admin/menu/agregar" method="post">
                <div class="form-group mb-3">
                    <label for="nombrePizza" class="form-label">Nombre e Ingredientes:</label>
                    <input type="text" id="nombrePizza" class="form-control" placeholder="Nombre e Ingredientes" name="pizza">
                </div>
                <div class="form-group mb-3">
                    <label for="precioChica" class="form-label">Precio pizza chica:</label>
                    <input type="text" id="precioChica" class="form-control" placeholder="Precio pizza chica" name="chica">
                </div>
                <div class="form-group mb-3">
                    <label for="precioGrande" class="form-label">Precio pizza grande:</label>
                    <input type="text" id="precioGrande"class="form-control" placeholder="Precio pizza grande" name="grande">
                </div>
                <button type="submit" class="btn btn-secondary" >Guardar</button>
            </form>
            {{#if error}}
                <h4>{{message}}</h4>
            {{/if}}
        </div>
    </div>
</div>
